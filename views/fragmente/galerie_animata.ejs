<% 
    const numImages = Math.floor(Math.random() * 5 + 1) * 3; // Genereaza 3, 6, 9, 12, sau 15
    const offset = Math.floor(Math.random() * (imagini.length - numImages));
    const selectedImages = imagini.slice(offset, offset + numImages);
%>
<div class="animated-gallery my-3">
    <% selectedImages.forEach((image, index) => { %>
        <div class="gallery-item gallery-item-<%= index %>">
            <img src="<%= image.fisier %>" alt="<%= image.alt %>">
            <div class="description">
                <h3><%= image.titlu %></h3>
                <p><%= image.text_descriere %></p>
            </div>
        </div>
    <% }) %>
</div>
